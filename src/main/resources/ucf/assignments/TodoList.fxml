<AnchorPane prefHeight="720.0" prefWidth="1080.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ucf.assignments.ItemListController">
   <children>
      <MenuBar fx:id="menuBar" maxWidth="1.7976931348623157E308" prefHeight="27.0" prefWidth="1080.0">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem fx:id="closeMenu" mnemonicParsing="false" onAction="#closeMenuClicked" text="Close" />

                <MenuItem fx:id="newMenu" mnemonicParsing="false" onAction="#newMenuClicked" text="New" />

                <MenuItem fx:id="openMenu" mnemonicParsing="false" onAction="#openMenuClicked" text="Open" />
              </items>
          </Menu>
              <Menu mnemonicParsing="false" text="Display">
                  <items>
                      <MenuItem fx:id="showCompleteItemsMenu" mnemonicParsing="false" onAction="#showCompleteMenuClicked" text="Show complete Items" />

                      <MenuItem fx:id="showIncompleteItemsMenu" mnemonicParsing="false" onAction="#showIncompleteMenuClicked" text="Show incomplete Items" />
                      <MenuItem fx:id="showAllItemsItemsMenu" mnemonicParsing="false" onAction="#showAllItemsMenuClicked" text="Show All Items" />
                  </items>

              </Menu>

              <Menu mnemonicParsing="false" text="Save">
                  <items>
                      <MenuItem fx:id="saveTaskMenu" mnemonicParsing="false" onAction="#saveItemsClicked" text="Save items" />
                      <MenuItem fx:id="saveItemsMenu" mnemonicParsing="false" onAction="#saveAsClicked" text="Save Items as " />
                  </items>

              </Menu>
          </menus>
      </MenuBar>

            <AnchorPane layoutY="26.0" minHeight="0.0" minWidth="0.0" prefHeight="694.0" prefWidth="1074.0">
               <children>
                  <TableView fx:id="itemTableView" layoutX="6.0" onMouseClicked="#mouseClicked" prefHeight="482.0" prefWidth="771.0" AnchorPane.bottomAnchor="212.0" AnchorPane.leftAnchor="6.0" AnchorPane.rightAnchor="297.0" AnchorPane.topAnchor="0.0">
                     <columns>
                        <TableColumn fx:id="itemsColumn" prefWidth="119.0" resizable="false" text="Items">
                            <cellValueFactory><PropertyValueFactory property="itemName" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="descriptionColumn" maxWidth="1.7976931348623157E308" prefWidth="450.0" resizable="false" text="Description">
                         <cellValueFactory><PropertyValueFactory property="description" />
                         </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="dueDateColumn" prefWidth="101.0" text="Due Date">
                         <cellValueFactory><PropertyValueFactory property="dueDate" />
                         </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="statusColumn" prefWidth="115.0" text="Status">
                            <cellValueFactory><PropertyValueFactory property="status" />
                            </cellValueFactory>
                     </TableColumn>
                     </columns>
                      <items>
                          <FXCollections fx:factory="observableArrayList">
                          </FXCollections>
                      </items>
                  </TableView>
                  <TextField fx:id="itemNameTextField" layoutX="788.0" layoutY="72.0" prefHeight="25.0" prefWidth="270.0" promptText="Item name" />
                  <Button fx:id="addItem" layoutX="788.0" layoutY="486.0" mnemonicParsing="false" onAction="#addItemClicked" prefHeight="25.0" prefWidth="278.0" text="Add" />
                  <DatePicker fx:id="dueDatePicker" layoutX="790.0" layoutY="451.0" onAction="#dueDateSelectClicked" prefHeight="25.0" prefWidth="270.0" promptText="Select a due date" />
                  <Button fx:id="deleteItem" layoutX="800.0" layoutY="28.0" mnemonicParsing="false" onAction="#deleteItemClicked" prefHeight="25.0" prefWidth="116.0" text="Delete Item" />
                  <Button layoutX="925.0" layoutY="28.0" mnemonicParsing="false" onAction="#clearClicked" prefHeight="25.0" prefWidth="116.0" text="Clear Table" />
            <TextArea fx:id="descriptionTextArea" layoutX="790.0" layoutY="104.0" prefHeight="337.0" prefWidth="264.0" wrapText="true" />
            <TextArea fx:id="previewDescription" editable="false" layoutX="9.0" layoutY="486.0" onKeyPressed="#keyBordPressedDescription" onMouseClicked="#descriptionPreviewMouseClicked" prefHeight="200.0" prefWidth="765.0" promptText="Description preview" wrapText="true">
               <font>
                  <Font size="12.0" />
               </font>
            </TextArea>
               </children>
            </AnchorPane>
   </children>
</AnchorPane>
